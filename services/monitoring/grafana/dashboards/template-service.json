{
  "title": "Template Service Metrics",
  "tags": ["template-service", "api"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "uid": "template-service-metrics",
  "panels": [
    {
      "id": 1,
      "title": "Total Templates Loaded",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "template_service_templates_loaded_total",
          "legendFormat": "Templates Loaded",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Request Rate",
      "type": "graph",
      "gridPos": {"x": 6, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(template_service_requests_total[5m])",
          "legendFormat": "Success",
          "refId": "A"
        },
        {
          "expr": "rate(template_service_errors_total[5m])",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "Template Render Time (Histogram)",
      "type": "graph",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(template_service_render_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "95th percentile",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Seconds"},
        {"format": "short"}
      ]
    },
    {
      "id": 4,
      "title": "Template Version Count",
      "type": "stat",
      "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "template_service_version_count_total",
          "legendFormat": "Template Versions",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Total Errors",
      "type": "stat",
      "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "template_service_errors_total",
          "legendFormat": "Errors",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {"mode": "absolute","steps":[{"value":0,"color":"green"},{"value":1,"color":"red"}]}
        }
      }
    },
    {
      "id": 6,
      "title": "Success Rate",
      "type": "graph",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "(rate(template_service_requests_total[5m]) - rate(template_service_errors_total[5m])) / rate(template_service_requests_total[5m]) * 100",
          "legendFormat": "Success %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "percent","label":"Success %","min":0,"max":100},
        {"format": "short"}
      ]
    },
    {
      "id": 7,
      "title": "Recent Template Service Logs",
      "type": "logs",
      "gridPos": {"x": 0, "y": 24, "w": 24, "h": 10},
      "targets": [
        {
          "expr": "{container=\"template-service\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
