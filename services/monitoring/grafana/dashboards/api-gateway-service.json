{
  "title": "API Gateway Service Dashboard",
  "uid": "api-gateway-dashboard",
  "refresh": "10s",
  "schemaVersion": 36,
  "version": 1,
  "tags": ["api-gateway", "notifications"],
  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "Request Rate (requests/sec)",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(api_gateway_requests_total[1m])",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests"},
        {"format": "short"}
      ]
    },

    {
      "id": 2,
      "type": "graph",
      "title": "Failed Requests (rate)",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(api_gateway_requests_failed_total[1m])",
          "legendFormat": "Failed/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Failures"},
        {"format": "short"}
      ]
    },

    {
      "id": 3,
      "type": "graph",
      "title": "Request Duration (p95)",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_gateway_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 Duration",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Seconds"},
        {"format": "short"}
      ]
    },

    {
      "id": 4,
      "type": "graph",
      "title": "Notifications Routed (by type)",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(api_gateway_notification_type_total[1m])",
          "legendFormat": "{{notification_type}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Routed/sec"},
        {"format": "short"}
      ]
    },

    {
      "id": 5,
      "type": "stat",
      "title": "CPU Time (total seconds)",
      "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "process_cpu_seconds_total",
          "refId": "A"
        }
      ]
    },

    {
      "id": 6,
      "type": "stat",
      "title": "Memory Usage (Resident)",
      "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },

    {
      "id": 7,
      "type": "stat",
      "title": "Open File Descriptors",
      "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "process_open_fds",
          "refId": "A"
        }
      ]
    },

    {
      "id": 8,
      "type": "graph",
      "title": "GC Collections (rate)",
      "gridPos": {"x": 18, "y": 16, "w": 6, "h": 8},
      "targets": [
        {
          "expr": "rate(python_gc_collections_total[5m])",
          "legendFormat": "Gen {{generation}}",
          "refId": "A"
        }
      ]
    },

    {
      "id": 9,
      "type": "logs",
      "title": "Recent Gateway Logs",
      "gridPos": {"x": 0, "y": 24, "w": 24, "h": 10},
      "targets": [
        {
          "expr": "{job=\"api-gateway\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    }
  ],

  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
