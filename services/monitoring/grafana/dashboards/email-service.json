{
  "title": "Email Service Metrics",
  "tags": ["email-service", "api"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "uid": "email-service-metrics",
  "panels": [
    {
      "id": 1,
      "title": "Total Emails Sent",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "email_service_emails_sent_total",
          "legendFormat": "Sent Emails",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {"mode": "absolute","steps":[{"value":0,"color":"green"}]}
        }
      }
    },
    {
      "id": 2,
      "title": "Emails Sent Rate",
      "type": "graph",
      "gridPos": {"x": 6, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(email_service_emails_sent_total[5m])",
          "legendFormat": "Success",
          "refId": "A"
        },
        {
          "expr": "rate(email_service_emails_failed_total[5m])",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Emails/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "Email Delivery Time (Histogram)",
      "type": "graph",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(email_service_delivery_time_seconds_bucket[5m])) by (le))",
          "legendFormat": "95th percentile",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Seconds"},
        {"format": "short"}
      ]
    },
    {
      "id": 4,
      "title": "Queue Length",
      "type": "stat",
      "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "email_service_queue_length",
          "legendFormat": "Current Queue",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Total Emails Failed",
      "type": "stat",
      "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "email_service_emails_failed_total",
          "legendFormat": "Failed Emails",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps":[{"value":0,"color":"green"},{"value":1,"color":"red"}]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Webhook Events Received",
      "type": "stat",
      "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "email_service_webhook_events_received_total",
          "legendFormat": "Webhook Events",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Emails Success Rate",
      "type": "graph",
      "gridPos": {"x": 6, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "(rate(email_service_emails_sent_total[5m]) / (rate(email_service_emails_sent_total[5m]) + rate(email_service_emails_failed_total[5m]))) * 100",
          "legendFormat": "Success %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "percent","label":"Success %","min":0,"max":100},
        {"format": "short"}
      ]
    },
    {
      "id": 8,
      "title": "Recent Email Service Logs",
      "type": "logs",
      "gridPos": {"x": 0, "y": 24, "w": 24, "h": 10},
      "targets": [
        {
          "expr": "{container=\"email-service\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
