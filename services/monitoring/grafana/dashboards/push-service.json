{
  "title": "Push Service Metrics",
  "tags": ["push-service", "notifications"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "uid": "push-service-metrics",
    "panels": [
      {
        "id": 1,
        "title": "Messages Consumed Total",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "push_service_messages_consumed_total",
            "legendFormat": "Messages Consumed",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Notifications Sent by Status",
        "type": "graph",
        "gridPos": {"x": 6, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(push_service_notifications_sent_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Rate/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(push_service_notifications_sent_total{status=\"success\"}[5m])) / sum(rate(push_service_notifications_sent_total[5m])) * 100",
            "legendFormat": "Success %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            },
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 4,
        "title": "Notification Processing Duration (95th percentile)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(push_service_notification_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(push_service_notification_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "50th percentile (median)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Queue Messages Ready",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "push_service_queue_messages_ready",
            "legendFormat": "Messages Ready",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Queue Messages Unacknowledged",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "push_service_queue_messages_unacknowledged",
            "legendFormat": "Unacked Messages",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Queue Message Lag",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "push_service_queue_message_lag_seconds",
            "legendFormat": "Lag (seconds)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 30, "color": "yellow"},
                {"value": 60, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Notification Retries Total",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(push_service_notification_retries_total[5m])",
            "legendFormat": "Retry Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Retries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Recent Push Service Logs",
        "type": "logs",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 10},
        "targets": [
          {
            "expr": "{container=\"push-service\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
}
