# ============================================
# api-gateway/.env.example
# ============================================
# Application
APP_NAME=Notification API Gateway
DEBUG=False
HOST=0.0.0.0
PORT=3000

# CORS
CORS_ORIGINS=*

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# User Service
USER_SERVICE_URL=http://user-service:8001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256